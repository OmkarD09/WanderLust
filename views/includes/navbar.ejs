<nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="#"><i class="fa-regular fa-compass"></i> WanderLust</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>
      <form class="d-flex search-form" role="search" action="/listings/search" method="GET" id="searchForm">
        <input class="form-control me-2 search-input" type="search" name="q" id="searchInput" placeholder="Search listings..." aria-label="Search" autocomplete="off" <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>value="<%= searchQuery %>"<% } %>/>
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i> <span>Search</span>
        </button>
        </form>
        
        <style>
          
          .search-form {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            max-width: 400px;
            width: 400px;
            z-index: 10;
          }
          
          @media (min-width: 992px) {
            .navbar-collapse {
              display: flex !important;
              justify-content: space-between;
              align-items: center;
              width: 100%;
            }
            
            .navbar-nav:first-child {
              flex: 0 0 auto;
            }
            
            .search-form {
              position: absolute;
              left: 50%;
              transform: translateX(-50%);
              max-width: 400px;
              width: 400px;
            }
            
            .navbar-nav.ms-auto {
              flex: 0 0 auto;
            }
          }
          
          @media (max-width: 991px) {
            .search-form {
              position: static;
              transform: none;
              left: auto;
              width: 100%;
              max-width: 100%;
              margin: 0.5rem 0;
            }
          }
          
          .search-input {
            border: 2px solid #e0e0e0;
            border-radius: 25px;
            padding: 0.5rem 1.25rem;
            font-size: 0.95rem;
            transition: all 0.3s ease;
          }
          
          .search-input:focus {
            border-color: #fe424d;
            box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.15);
            outline: none;
          }
          
          .search-btn {
            background-color: #fe424d;
            color: white;
            border: none;
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
            white-space: nowrap;
          }
          
          .search-btn:hover {
            background-color: #e63a44;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(254, 66, 77, 0.3);
            color: white;
          }
          
          .search-btn:active {
            transform: translateY(0);
          }
          
          .search-btn i {
            margin-right: 0.5rem;
          }
          
          @media (max-width: 768px) {
            .search-form {
              max-width: 100%;
              width: 100%;
            }
            
            .search-btn span {
              display: none;
            }
            
            .search-btn {
              padding: 0.5rem 1rem;
              min-width: auto;
            }
          }
        </style>
        
        <script>
            (function() {
                const searchInput = document.getElementById('searchInput');
                const searchForm = document.getElementById('searchForm');
                let searchTimeout;
                let isUserTyping = false;
                let lastQuery = '';
                
                if (searchInput && searchForm) {
                    // Store cursor position and focus state
                    searchInput.addEventListener('focus', function() {
                        isUserTyping = true;
                    });
                    
                    searchInput.addEventListener('blur', function() {
                        // Small delay to check if blur was caused by redirect
                        setTimeout(function() {
                            isUserTyping = false;
                        }, 100);
                    });
                    
                    // Real-time search as user types (debounced)
                    searchInput.addEventListener('input', function(e) {
                        const query = e.target.value;
                        const queryTrimmed = query.trim();
                        lastQuery = query;
                        isUserTyping = true;
                        
                        // Clear previous timeout
                        clearTimeout(searchTimeout);
                        
                        // Only auto-search if we're on listings pages
                        if (!window.location.pathname.includes('/listings')) {
                            return;
                        }
                        
                        // If query is empty, redirect to all listings after short delay
                        if (queryTrimmed === '') {
                            searchTimeout = setTimeout(() => {
                                window.location.href = '/listings';
                            }, 400);
                            return;
                        }
                        
                        // Debounce search - wait 400ms after user stops typing before searching
                        searchTimeout = setTimeout(() => {
                            isUserTyping = false;
                            const currentQuery = searchInput.value.trim();
                            window.location.href = '/listings/search?q=' + encodeURIComponent(currentQuery);
                        }, 400);
                    });
                    
                    // Handle form submission (Enter key or button click) - works from any page
                    searchForm.addEventListener('submit', function(e) {
                        e.preventDefault();
                        clearTimeout(searchTimeout);
                        isUserTyping = false;
                        const query = searchInput.value.trim();
                        if (query) {
                            window.location.href = '/listings/search?q=' + encodeURIComponent(query);
                        } else {
                            window.location.href = '/listings';
                        }
                    });
                    
                    // Restore focus and cursor position after page load if on listings pages
                    function restoreFocus() {
                        if (window.location.pathname.includes('/listings')) {
                            const input = document.getElementById('searchInput');
                            if (input) {
                                input.focus();
                                // Move cursor to end of input
                                const length = input.value.length;
                                input.setSelectionRange(length, length);
                            }
                        }
                    }
                    
                    // Try multiple times to ensure focus is restored
                    if (document.readyState === 'loading') {
                        document.addEventListener('DOMContentLoaded', restoreFocus);
                    } else {
                        // DOM already loaded
                        restoreFocus();
                    }
                    
                    // Also try after a very short delay as backup
                    setTimeout(restoreFocus, 50);
                }
            })();
        </script>
        </div>

        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">Create Listing</a>

          <% if(!currentUser) { %>
            <a class="btn btn-primary mx-2" href="/signup" role="button">Sign Up</a>
            <a class="btn btn-secondary" href="/login" role="button">Log In</a>
          <% } else { %>
            <span class="navbar-text mx-2">
              Hello, <strong><%= currentUser.username %></strong>!
            </span>
            <a class="btn btn-danger logout-btn" href="/logout" role="button">Log Out</a>
          <% } %>
        </div>
      </form>
  </div>
